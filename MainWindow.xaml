<Window x:Class="GameLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d"
        Title="RPG Launcher" Height="500" Width="900">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Grid.Column="0" Background="BurlyWood">
            <ItemsControl x:Name="gameListControl">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Content="{Binding Title}"
                                Margin="5"
                                Padding="10"
                                Click="GameButton_Click"
                                Tag="{Binding}" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Border>

        <!-- main content -->
        <Grid Grid.Column="1" x:Name="mainContentGrid" Background="Beige">
            <TextBlock x:Name="titleTextBlock"
                       FontSize="20"
                       FontWeight="Bold" />
            <TextBlock x:Name="notesTextBlock"
                       Text="Select a game from the sidebar to see details."
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="16"
                       Foreground="Gray"
                       TextWrapping="Wrap" />
            <Button x:Name="launchGameButton"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Content=""
                    Click="LaunchGame_Click" />
        </Grid>
    </Grid>
</Window>